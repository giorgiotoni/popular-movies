<?xml version="1.0" encoding="utf-8"?>
<com.android.popularmovies.detail.trailer.TrailerItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            android:id="@+id/trailer_root_view"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:background="?attr/selectableItemBackground"
                                                            android:padding="@dimen/keyline">

    <ImageView android:id="@+id/trailer_play"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"/>

    <TextView android:id="@+id/trailer_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toEndOf="@id/trailer_play"
              android:layout_toRightOf="@id/trailer_play"
              android:paddingLeft="@dimen/keyline_half"
              android:textColor="@android:color/black"/>

</com.android.popularmovies.detail.trailer.TrailerItemLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.android.popularmovies.home.PosterItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="@dimen/poster_height">

    <ImageView android:id="@+id/poster_image"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"/>

    <View android:id="@+id/poster_item_overlay"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="?attr/selectableItemBackground"/>

</com.android.popularmovies.home.PosterItemLayout>